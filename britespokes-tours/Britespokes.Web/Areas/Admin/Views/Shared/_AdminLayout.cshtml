<!DOCTYPE html>
<html>
<head>
  <title>@ViewBag.Title - Britespokes Admin</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  @Styles.Render("~/styles/admin")
  @if (ViewBag.PageSpecificCss != null)
  {
    <link href="@string.Format("/Content/admin/{0}.css", ViewBag.PageSpecificCss)" rel="stylesheet" media="screen"/>
  }

  <!-- open sans font -->
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

  <!-- lato font -->
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,900,300italic,400italic,700italic,900italic' rel='stylesheet' type='text/css'>

  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>

  <!-- navbar -->
  <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <button type="button" class="btn btn-navbar visible-phone" id="menu-toggler">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <a class="brand" href="@Url.RouteUrl("admin-dashboard")">britespokes</a>

      <ul class="nav pull-right">
        <li class="hidden hidden-phone">
          <input class="search" type="text" />
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle hidden-phone" data-toggle="dropdown">Your account
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li>@Html.RouteLink("Logout", "logout")</li>
          </ul>
        </li>
        <li class="settings hidden-phone">
          <a href="@Url.RouteUrl("home")" role="button" title="back to Britespokes" target="_blank">
            <i class="icon-share-alt"></i>
          </a>
        </li>
      </ul>
    </div>
  </div>
  <!-- end navbar -->

  <!-- sidebar -->
  <div id="sidebar-nav">
    <ul id="dashboard-menu">
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-dashboard"), Name = "Dashboard", Icon = "dashboard", IsActive = ControllerName == "Dashboard" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-organizations"), Name = "Organizations", Icon = "briefcase", IsActive = ControllerName == "Organizations" })
      @Html.Partial("_DashboardToursMenuItem", new { Name = "Tours", Icon = "plane", IsActive = (ControllerName == "Tours" || ControllerName == "Departures" || ControllerName == "TourTimelineItems" || ControllerName == "Experiences") })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-orders"), Name = "Orders", Icon = "shopping-cart", IsActive = ControllerName == "Orders" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-discount-codes"), Name = "Discounts", Icon = "money", IsActive = ControllerName == "DiscountCodes" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-users"), Name = "Users", Icon = "group", IsActive = ControllerName == "Users" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-giftcards"), Name = "Gift Cards", Icon = "shopping-cart", IsActive = ControllerName == "GiftCards" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-giftorders"), Name = "Gift Orders", Icon = "shopping-cart", IsActive = ControllerName == "GiftOrders" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-categories"), Name = "Categories", Icon = "shopping-cart", IsActive = ControllerName == "Categories" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-Sub-categories"), Name = "Sub Categories", Icon = "shopping-cart", IsActive = ControllerName == "SubCategory" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-perspectives"), Name = "Perspectives", Icon = "shopping-cart", IsActive = ControllerName == "Perspectives" })
      @Html.Partial("_DashboardMenuItem", new { Url = @Url.RouteUrl("admin-seotool-staic-pages"), Name = "SEO Tool's Static Pages", Icon = "shopping-cart", IsActive = ControllerName == "SEOToolStaticPages" })

        
    </ul>
  </div>
  <!-- end sidebar -->

  <!-- main container -->
  <div class="content">
    <div class="container-fluid">
      @Html.InfoMessage()
      @Html.ErrorMessage()
      @RenderBody()
    </div>
  </div>

  <!-- scripts -->
  @Scripts.Render("~/bundles/admin")
  @if (ViewBag.PageSpecificJavascript != null)
  {
    <script type="text/javascript" src="@string.Format("/Scripts/admin/{0}.js", ViewBag.PageSpecificJavascript)"></script>
  }
</body>
</html>
