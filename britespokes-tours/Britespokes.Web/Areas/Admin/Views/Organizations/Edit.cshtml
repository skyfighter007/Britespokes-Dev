@model Britespokes.Web.Areas.Admin.Models.Organizations.OrganizationEdit
@{
  ViewBag.Title = string.Format("Edit {0}", Model.Name);
  ViewBag.PageSpecificCss = "edit-form";
  ViewBag.PageSpecificJavascript = "organization-edit";
}
<div id="pad-wrapper" class="edit-form">
  <div class="row-fluid header">
    <h3>Edit @Model.Name</h3>
    @using (Html.BeginRouteForm("admin-organization-destroy", new { organizationId = Model.Id}))
    {
      <button type="submit" class="btn-flat icon pull-right delete-organization" data-toggle="tooltip" title="" data-placement="top" data-original-title="Delete organization">
        <i class="icon-trash"></i>
      </button>
    }
  </div>

  <div class="row-fluid form-wrapper">
    <!-- left column -->
    <div class="span9 with-sidebar">
      <div class="container">
        @using (Html.BeginRouteForm("admin-organization-edit", new {organizationId = @Model.Id}, FormMethod.Post, new { @class = "" }))
        {
          @Html.EditorFor(m => m)
          <div class="span11 field-box actions">
            <input type="submit" class="btn-glow primary" value="Update">
            <span>OR</span>
            @Html.RouteLink("cancel", "admin-organizations", null, new { @class = "btn-cancel" })
          </div>
        }
      </div>
    </div>

    <!-- side right column -->
    <div class="span3 form-sidebar pull-right">
      <h6 class="center">Organization Stats</h6>
      <div class="hr hr12 dotted"></div>
      <div class="clearfix center">
        <div class="grid2">
          <span class="bigger-175 blue">@Model.UserCount</span>
          <br>
          Users
        </div>
        <div class="grid2">
          <span class="bigger-175 blue">@Model.TourCount</span>
          <br>
          Tours
        </div>
      </div>
      <div class="hr hr16 dotted"></div>
    </div>
  </div>
</div>
