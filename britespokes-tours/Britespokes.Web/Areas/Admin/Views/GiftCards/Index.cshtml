@model Britespokes.Web.Areas.Admin.Models.GiftCards.GiftCardsIndex
@{
    ViewBag.Title = "Gift Cards";
    ViewBag.PageSpecificCss = "item-list";
}
<!-- upper main stats -->
<div id="main-stats">
  <div class="row-fluid stats-row">
    <div class="span12 stat">
      <div class="data">
        <span class="number">@Model.Count</span>
        @Html.Pluralize(Model.Count, "gift card")
      </div>
      <span class="date">total</span>
    </div>
  </div>
</div>
<!-- end upper main stats -->
<div id="pad-wrapper" class="item-list">
  <div class="row-fluid header">
    <h3>Gift Cards</h3>
    <div class="span10 pull-right">
      <input type="text" class="hidden span5 search" placeholder="Type a giftcard's name...">

      <a href="@Url.RouteUrl("admin-giftcard-create")" class="btn-flat success pull-right">
        <span>&#43;</span>
        NEW GIFT CARD
      </a>
    </div>
  </div>
  <!-- tours table -->
  <div class="row-fluid table">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>
           Gift Code
          </th>
          <th>
            <span class="line"></span>Name
          </th>
          <th>
            <span class="line"></span>Published?
          </th>
          <th>
            <span class="line"></span>Permalink
          </th>
         
        </tr>
      </thead>
      <tbody>
        @foreach (var item in @Model.GiftCards.Select((giftcard, i) => new { GiftCard = giftcard, Index = i }))
        {
          <tr class="@(item.Index == 0 ? "first" : null)">
            <td>
              @Html.RouteLink(item.GiftCard.GiftCode, "admin-giftcard-edit", new { giftcardId = item.GiftCard.Id })
            </td>
            <td>@item.GiftCard.Name</td>
            <td>@Html.DisplayFor(m => item.GiftCard.IsPublished)</td>
            <td>@item.GiftCard.Permalink</td>
          </tr>
        }
      </tbody>
    </table>
  </div>
  <div class="hidden pagination pull-right">
    <ul>
      <li><a href="#">&#8249;</a></li>
      <li><a class="active" href="#">1</a></li>
      <li><a href="#">2</a></li>
      <li><a href="#">3</a></li>
      <li><a href="#">4</a></li>
      <li><a href="#">5</a></li>
      <li><a href="#">&#8250;</a></li>
    </ul>
  </div>
  <!-- end tours table -->
</div>