@model Britespokes.Services.GiftCards.GiftOrderDetails
<div class="span6">
    <div class='giftcard'>


        <div class='control-group'>
            <h1>Card @Model.Index</h1>
           
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.GiftOrderId)
            @Html.HiddenFor(m => m.Index)
        </div>
         @Html.EditorFor(m => m.RecipientEmail, new { placeholder = "" })
        @Html.EditorFor(m => m.YourName, new { placeholder = "" })
        @Html.EditorFor(m => m.DisplayAmount, new { placeholder = "" })
        @Html.EditorFor(m => m.Message, new { rows = 7, placeholder = "your message" })




    </div>
    <hr>
</div>

