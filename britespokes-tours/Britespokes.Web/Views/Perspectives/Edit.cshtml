@using Britespokes.Web.Areas.Admin.Models.Perspectives
@model PerspectiveEdit
@{
  ViewBag.Title = string.Format("Edit  {0}", Model.Headline);
  ViewBag.PageSpecificCss = "edit-form";
  ViewBag.PageSpecificJavascript = "giftcard-edit";
}
<div id="edit-tour">
  <div id="pad-wrapper" class="edit-form">
    <div class="row-fluid header">
      <h3>Edit @Model.Headline</h3>
      @using (Html.BeginRouteForm("admin-perspective-delete", new { perspectiveid = Model.Id }, FormMethod.Post))
      {
        <button type="submit" class="btn-flat icon pull-right delete-category" data-toggle="tooltip" title="" data-placement="top" data-original-title="Delete perspective post">
          <i class="icon-trash"></i>
        </button>
      }
    </div>
    <div class="row-fluid form-wrapper">
      <!-- left column -->
      <div class="span9 with-sidebar">
        <div class="container">
          @using (Html.BeginRouteForm("admin-perspective-edit", new { categoryid = @Model.Id }, FormMethod.Post, new { @class = "" }))
          {
            @Html.EditorFor(m => m)
            <div class="span11 field-box actions">
              <input type="submit" class="btn-glow primary" value="Update">
              <span>OR</span>
              @Html.RouteLink("cancel", "admin-perspectives", null, new { @class = "btn-cancel" })
            </div>
          }
        </div>
      </div>
      <!-- side right column -->
      <div class="span3 form-sidebar pull-right">
        @*@Html.Partial("_TourSidebarMenu", new TourSidebar { Name = Model.Name, Id = Model.Id, Permalink = Model.Permalink, HasExperience = Model.HasExperience, ShowCreateExperienceButton = true })*@
      </div>
    </div>
  </div>
</div>