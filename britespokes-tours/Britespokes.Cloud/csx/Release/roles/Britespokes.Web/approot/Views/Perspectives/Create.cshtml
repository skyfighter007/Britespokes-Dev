@model  Britespokes.Web.Models.Perspectives.PerspectiveEdit
@{
    ViewBag.Title = "Create New Blog";
  ViewBag.PageSpecificCss = "edit-form";
  ViewBag.PageSpecificJavascript = "Perspectives-Create";
}
<link href="@Url.Content("~/Content/admin/jquery-ui-1.10.2.custom.css")" rel="stylesheet"/>
<link href="@Url.Content("~/Content/perpectivebootstrap.css")" rel="stylesheet"/>
<link href="@Url.Content("~/Content/admin/bootstrap-responsive.css")" rel="stylesheet"/>
<link href="@Url.Content("~/Content/admin/bootstrap-overridesll.css")" rel="stylesheet"/>
<link href="@Url.Content("~/Content/admin/bootstrap-wysihtml5.css")" rel="stylesheet"/> 
<link href="@Url.Content("~/Content/admin/wysiwyg-color.css")" rel="stylesheet"/> 
 



@if (ViewBag.PageSpecificCss != null)
  {
    <link href="@string.Format("/Content/admin/{0}.css", ViewBag.PageSpecificCss)" rel="stylesheet" media="screen"/>
  }
<div id="edit-giftcard">
<div class='container primary' style="position:relative;top:-50px">
<div id="pad-wrapper" class="edit-form">
   
    @if (TempData["Success"] != null)
    {
    <div class="message success">
        @TempData["Success"] <a href="@Url.RouteUrl("perspective-post", new { tourpermalink =TempData["TourPermalink"],permalink = TempData["PerspectivesPermalink"]})"> Click here to view your blog.</a>
    </div>
    }
  <div class="row-fluid header">
    <h3>write your perspective</h3>
  </div>

  <div class="row-fluid form-wrapper">
    <!-- left column -->
      <div class="container">
        @using (Html.BeginRouteForm("create-perspective", FormMethod.Post, new { @class = "" }))
        {
          @Html.EditorFor(m => m)
          <div class="span11 field-box actions">
            <input type="submit" class="btn-glow primary" value="Create">
            <span>OR</span>
            @Html.RouteLink("cancel", "Perspective", null, new { @class = "btn-cancel" })
          </div>
        }
      </div>
  </div>
</div>
    </div>


</div>

  
