@model Britespokes.Web.Areas.Admin.Models.DiscountCodes.DiscountCodeEdit
@{
  ViewBag.Title = string.Format("Edit {0}", Model.LowerCode);
  ViewBag.PageSpecificCss = "edit-form";
  ViewBag.PageSpecificJavascript = "discount-code-edit";
}
<div id="edit-discount-code">
  <div id="pad-wrapper" class="edit-form">
    <div class="row-fluid header">
      <h3>Edit @Model.LowerCode</h3>
      @using (Html.BeginRouteForm("admin-discount-code-destroy", new { discountCodeId = Model.Id }, FormMethod.Post))
      {
        <button type="submit" class="btn-flat icon pull-right delete-discount-code" data-toggle="tooltip" title="" data-placement="top" data-original-title="Delete discount code">
          <i class="icon-trash"></i>
        </button>
      }
    </div>
    <div class="row-fluid form-wrapper">
      <!-- left column -->
      <div class="span9 with-sidebar">
        <div class="container">
          @using (Html.BeginRouteForm("admin-discount-code-edit", new { discountCodeId = @Model.Id }, FormMethod.Post, new { @class = "" }))
          {
            @Html.EditorFor(m => m)
            <div class="span11 field-box actions">
              <input type="submit" class="btn-glow primary" value="Update">
              <span>OR</span>
              @Html.RouteLink("cancel", "admin-discount-codes", null, new { @class = "btn-cancel" })
            </div>
        }
        </div>
      </div>
      <!-- side right column -->
      <div class="span3 form-sidebar pull-right">
      </div>
    </div>
  </div>
</div>
