      <img alt='AlliedTPro' src='@Url.AssetUrl("images/alliedpro-logo.jpg")' style="padding-left:0px;">
      <img alt='Kuoni' src='@Url.AssetUrl("images/kuoni-logo.jpg")' >
    </div>
  </div>
 