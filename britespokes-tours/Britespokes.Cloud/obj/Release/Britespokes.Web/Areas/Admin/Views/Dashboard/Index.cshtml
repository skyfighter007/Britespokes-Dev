@model Britespokes.Services.Admin.Dashboard.MainStats
@{
  ViewBag.Title = "Dashboard";
  ViewBag.PageSpecificCss = "dashboard";
}

<!-- upper main stats -->
<div id="main-stats">
  <div class="row-fluid stats-row">
    <div class="span3 stat">
      <div class="data">
        <span class="number">@Model.TourCount</span>
        tours
      </div>
      <span class="date">total</span>
    </div>
    <div class="span3 stat">
      <div class="data">
        <span class="number">@Model.UserCount</span>
        users
      </div>
      <span class="date">total</span>
    </div>
    <div class="span3 stat">
      <div class="data">
        <span class="number">@Model.OrderCount</span>
        orders
      </div>
      <span class="date">total</span>
    </div>
    <div class="span3 stat last">
      <div class="data">
        <span class="number">@string.Format("{0:C0}", Model.TotalSales)</span>
        sales
      </div>
      <span class="date">total</span>
    </div>
  </div>
</div>
<!-- end upper main stats -->

<div id="pad-wrapper">
  <div class="row-fluid">
    <h1>Welcome to the Britespokes CMS</h1>
  </div>
</div>
