@model  Britespokes.Web.Areas.Admin.Models.Perspectives.PerspectiveEdit
@{
  ViewBag.Title = "New Perspective Post";
  ViewBag.PageSpecificCss = "edit-form";
  ViewBag.PageSpecificJavascript = "giftcard-edit";
}

<div id="pad-wrapper" class="edit-form">
  <div class="row-fluid header">
    <h3>Create New Perspective Post</h3>
  </div>

  <div class="row-fluid form-wrapper">
    <!-- left column -->
    <div class="span9">
      <div class="container">
        @using (Html.BeginRouteForm("admin-perspective-create", FormMethod.Post, new { @class = "" }))
        {
          @Html.EditorFor(m => m)
          <div class="span11 field-box actions">
            <input type="submit" class="btn-glow primary" value="Create">
            <span>OR</span>
            @Html.RouteLink("cancel", "admin-perspectives", null, new { @class = "btn-cancel" })
          </div>
        }
      </div>
    </div>
  </div>
</div>
