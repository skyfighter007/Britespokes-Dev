@model Britespokes.Web.Areas.Admin.Models.Categories.CategoriesIndex
@{
  ViewBag.Title = "Categories";
  ViewBag.PageSpecificCss = "item-list";
}
<!-- upper main stats -->
<div id="main-stats">
  <div class="row-fluid stats-row">
    <div class="span12 stat">
      <div class="data">
        <span class="number">@Model.Count</span>
        @Html.Pluralize(Model.Count, "category")
      </div>
      <span class="date">total</span>
    </div>
  </div>
</div>
<!-- end upper main stats -->
<div id="pad-wrapper" class="item-list">
  <div class="row-fluid header">
    <h3>Categories</h3>
    <div class="span10 pull-right">
      <input type="text" class="hidden span5 search" placeholder="Type a category's name...">

      <a href="@Url.RouteUrl("admin-category-create")" class="btn-flat success pull-right">
        <span>&#43;</span>
        NEW CATEGORY
      </a>
    </div>
  </div>
  <!-- tours table -->
  <div class="row-fluid table">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>
            Code
          </th>
          <th>
            <span class="line"></span>Name
          </th>
          <th>
            <span class="line"></span>Published?
          </th>
         
        </tr>
      </thead>
      <tbody>
        @foreach (var item in @Model.Categories.Select((category, i) => new { Category = category, Index = i }))
        {
          <tr class="@(item.Index == 0 ? "first" : null)">
            <td>
              @Html.RouteLink(item.Category.Name, "admin-categories-edit", new { categoryid = item.Category.Id })
            </td>
            <td>@item.Category.Name</td>
            <td>@Html.DisplayFor(m => item.Category.Published)</td>
           
          </tr>
        }
      </tbody>
    </table>
  </div>
  <div class="hidden pagination pull-right">
    <ul>
      <li><a href="#">&#8249;</a></li>
      <li><a class="active" href="#">1</a></li>
      <li><a href="#">2</a></li>
      <li><a href="#">3</a></li>
      <li><a href="#">4</a></li>
      <li><a href="#">5</a></li>
      <li><a href="#">&#8250;</a></li>
    </ul>
  </div>
  <!-- end tours table -->
</div>